{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "lib": [
            "es6",
            "dom",
            "es2016.array.include"
        ],
        "types": [
            "node"
        ],
        "jsx": "react",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
        ],
        "outDir": "dist",
        "allowJs": true,
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules/",
        "dist/",
    ]
}